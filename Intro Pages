class Button():
  def __init__(self, x, y, image):
      self.rect = self.image.get_rect()
        # self.rect.topleft = (x, y)    why is this needed?
        # self.clicked = False

  def draw(self,  # surface):
      action=False
      pos = pygame.mouse.get_pos()
      
      if self==cars_button:
          screen.blit(car1_img,(350,400))
          screen.blit(car2_img,(500,400))
          screen.blit(car3_img,(650,400))
          
      elif self==bg_button:
          screen.blit(bg1_img,(350,400))
          screen.blit(bg2_img,(500,400))
          screen.blit(bg3_img,(650,400))
          
      elif self==difficulty_img:
          screen.blit(easy_img,(350,400))
          screen.blit(hard_img,(500,400))
          screen.blit(torture_img,(650,400))
          
      else:
        if self.rect.collidepoint(pos):
            if pygame.mouse.get_pressed()[0] == 1:  # and self.clicked == False:   #[0] for left mouse clicks
              #self.clicked = True
              action = True

        # if pygame.mouse.get_pressed()[0] == 0:
        # self.clicked = False

        surface.blit(self.image, (self.rect.x, self.rect.y))
        # screen

        return action

  def drawCars(self):
    action = False
    pos = pygame.mouse.get_pos()

    if self.rect.collidepoint(pos):
      if pygame.mouse.get_pressed()[0] == 1:  # and self.clicked == False:   #[0] for left mouse clicks
        # self.clicked = True
        action = True

    # if pygame.mouse.get_pressed()[0] == 0:
    # self.clicked = False

    surface.blit(self.image, (self.rect.x, self.rect.y))
    # screen

    return action

    


